
<%- include('header') -%>

<% if(message.length > 0){ %>
    <div class="alter alert-success text-center">
        <%= message %>
    </div> 
<% } %>

<style>
    #button1 , #button2 {
display:inline-block;

}

</style>

<div class="text-center center-div" id="login">
    <div class="container w-50 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Update a Product</h2>
        </div>
        
        <form action="/product/updateProduct/<%=product._id %>" method="post" class="pt-3">
            <div class="form-group">
                Product Name: 
                <input type="text" class="form-control" name="productName" value="<%=product.productName %>">
            </div>
            <div class="form-group">
                Product Description: 
                <input type="text" class="form-control" name="productDesc" value="<%=product.productDesc %>">
            </div>
            <div class="form-group">
                Product Price: 
                <input type="text" class="form-control" name="productPrice" value="<%=product.productPrice%>">
            </div>
            <button type="submit" class="btn btn-success rounded-pill" id="button1">Update Product</button>
            <a href="/product/update" class="btn btn-success rounded-pill" id="button2">Products Page</a>
        </form>
        
    </div>
</div>

</body>
</html>
