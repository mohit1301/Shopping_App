<!DOCTYPE html>

<head>
    <title>Products Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/styleProducts.css">
</head>
<body>
        <div class="card col-md-8 offset-md-5" style="max-width: 18rem">
            <div class="card-body">
                <h3 class="card-title">Hi <%= user.name %></h3>
            </div>
          </div>
    <% if(message.length > 0){ %>
        <div class="alter alert-success text-center">
            <%= message %>
        </div> 
    <% } %>

    <div class="container">
        <div class="row">
        <div class="col-lg-9">
        <div class="row">
            <% for(let product of Products) {%>
                <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">                        
                        Name: <%= product.productName%>
                    </h4>
                    <p class="card-text">Description: <%= product.productDesc%></p>
                    <h5>Price: Rs <%= product.productPrice%></h5>
                </div>
                <div class="card-footer">
                <a href="/product/update/<%=product._id%>" class="btn btn-primary btn-sm">Update Product</a>
                <a href="/product/delete/<%=product._id%>" class="btn btn-danger btn-sm">Delete Product</a>
                    </div>
                    </div>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
      </div>
      
      <div class="links">
        <a href="/user/dashboard" class="btn btn-success btn-sm">DashBoard</a>
    </div> 
</body>
</html>